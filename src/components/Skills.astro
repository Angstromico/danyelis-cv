---
interface Props {
 skillsTitle: string
 skills: string[]
}

const {skillsTitle, skills} = Astro.props
const skills1 = skills.slice(0,3)
const skills2 = skills.slice(3,6)
const skillsGroups = [skills1, skills2]
---

<section class='skills section' id='skills'>
 <h2 class="section-title">{skillsTitle}</h2>
 <div class="skills__content bd-grid">
    {skillsGroups.map(skillsInd =>
      <ul class="skills__data">
        {skillsInd.map(skill =>
          <li class="skills__name">
            <span class="skills__circle"></span> {skill}
          </li>
        )}
      </ul>
    )}
  </div>
</section>

